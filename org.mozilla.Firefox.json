{
    "id" : "org.mozilla.Firefox",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
         "V" : "1"
        }
    },
    "command" : "firefox",
    "modules" : [
        {
            "name" : "firefox",
            "buildsystem": "simple",
            "sources" : [
                {
                    "url" : "https://archive.mozilla.org/pub/firefox/releases/60.0.2/linux-x86_64/en-US/firefox-60.0.2.tar.bz2",
                    "sha256" : "88dabfb289183eb7b0b221c70a46d2f96d0ed989eeb1209dad1c33dc8a7cdd1adde6858cdd562acabe0a5400bf02e7364bdf3cf827945d",
                    "type" : "archive"
                },
                {
                    "dest" : "",
                    "path" : "org.mozilla.Firefox.appdata.xml",
                    "type" : "file"
                },
                {
                    "dest" : "",
                    "path" : "org.mozilla.Firefox.desktop",
                    "type" : "file"
                }
            ],
            "build-commands": [
               "mkdir -p /app/bin",
               "mkdir -p /app/share/appdata",
               "mkdir -p /app/share/applications",
               "cp -R * /app/bin/",
               "cp org.mozilla.Firefox.desktop /app/share/applications/org.mozilla.Firefox.desktop",
               "cp org.mozilla.Firefox.appdata.xml /app/share/appdata/org.mozilla.Firefox.appdata.xml",
               "mkdir -p /app/share/icons/hicolor/64x64/apps/",
               "cp /app/bin/browser/chrome/icons/default/default128.png /app/share/icons/hicolor/64x64/apps/org.mozilla.Firefox.png"
            ]
        }
    ],
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home:rw",
        "--share=network",
        "--socket=pulseaudio",
        "--device=dri"
    ]
}
